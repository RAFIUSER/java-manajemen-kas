<?xml version="1.0" encoding="UTF-8"?>
<project name="manajemen-kas" default="default" basedir=".">
    <description>Builds, tests, and runs the project manajemen-kas.</description>
    <import file="nbproject/build-impl.xml"/>

    <property name="build.temp.dir" value="build/temp"/>
    
    <target name="clean" depends="deps-clean">
        <delete dir="build"/>
        <delete dir="dist"/>
    </target>

    <target name="unjar-libs">
        <mkdir dir="build/temp"/>
        <unzip dest="build/temp">
            <fileset dir="lib" includes="*.jar"/>
        </unzip>
        
        <delete>
            <fileset dir="build/temp/META-INF">
                <include name="MANIFEST.MF"/>
            </fileset>
        </delete>
    </target>

    <target name="jar" depends="compile, unjar-libs">
        <jar destfile="dist/manajemen-kas.jar">
            
            <fileset dir="build/classes"/>
            
            <fileset dir="build/temp"/>
            
            <manifest>
                <attribute name="Main-Class" value="manajemen.kas.LoginForm"/>
            </manifest>
        </jar>
    </target>
</project>